datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model AptitudeTest {
  createdAt       DateTime @default(now())
  id              String   @id @default(cuid())
  testDescription String?
  testName        String?
  testQuestions   Json?
  updatedAt       DateTime @updatedAt
}

model Counselor {
  chatSessions ChatSession[]
  createdAt    DateTime      @default(now())
  expertise    String?
  firstName    String?
  id           String        @id @default(cuid())
  lastName     String?
  updatedAt    DateTime      @updatedAt
}

model CareerPath {
  careerDescription String?
  careerName        String?
  createdAt         DateTime @default(now())
  id                String   @id @default(cuid())
  stepsToAchieve    Json?
  updatedAt         DateTime @updatedAt
}

model ChatSession {
  chatContent Json?
  counselor   Counselor? @relation(fields: [counselorId], references: [id])
  counselorId String?
  createdAt   DateTime   @default(now())
  id          String     @id @default(cuid())
  sessionId   String?
  updatedAt   DateTime   @updatedAt
  user        User?      @relation(fields: [userId], references: [id])
  userId      String?
}

model User {
  chatSessions ChatSession[]
  createdAt    DateTime      @default(now())
  email        String?       @unique
  firstName    String?
  id           String        @id @default(cuid())
  lastName     String?
  password     String
  roles        Json
  updatedAt    DateTime      @updatedAt
  username     String        @unique
}
